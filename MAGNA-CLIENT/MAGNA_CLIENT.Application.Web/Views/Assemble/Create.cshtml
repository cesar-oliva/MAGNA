@model MAGNA_CLIENT.Entities.Assemble
@{
    ViewBag.Title = "Create";
    ViewData["Title"] = "Create New Assemble";
    List<SelectListItem>assembleType = (List<SelectListItem>)ViewBag.assembleType;
    List<SelectListItem> technicalLocation= (List<SelectListItem>)ViewBag.technicalLocation;
    Guid id = Guid.NewGuid();
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
    <body>
        <div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h3>Create New Assemble</h3>
        </div>
    </div>
     <!--breadcrumb-->
 <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">MAGNA</a></li>
    <li class="breadcrumb-item"><a href="#">Assemble</a></li>
    <li class="breadcrumb-item active" aria-current="page">Create</li>
  </ol>
</nav>
    <div class="row">
       <div class="col-sm-10">
           <form method="post" asp-action="Create">
               <h4>Assemble</h4>
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <!-- Form Row-->
                <div class="row gx-3 mb-3">
                    <!-- Form Group (Code)-->
                    <div class="col-md-6">
                       <label asp-for="Id" class="control-label">Id</label>
                       <input asp-for="Id" type = "text" value = "@id" class="form-control" readonly/ >
                       <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <!-- Form Group (Code)-->
                    <div class="col-md-6">
                       <label asp-for="AssembleCode" class="control-label">Code</label>
                       <input asp-for="AssembleCode" class="form-control" />
                       <span asp-validation-for="AssembleCode" class="text-danger"></span>
                    </div>
                     <!-- Form Group (Description)-->
                    <div class="col-md-6">
                       <label asp-for="AssembleDescription" class="control-label">Description</label>
                       <input asp-for="AssembleDescription" class="form-control" />
                       <span asp-validation-for="AssembleDescription" class="text-danger"></span>
                    </div>
                    <!-- Form Group (Type)-->
                    <div class="col-md-6">
                      <label asp-for="AssembleType.Id" class="control-label">Type</label>
                      @Html.DropDownListFor(m => m.AssembleType.Id, assembleType, new { @class = "form-control" })
                      <span asp-validation-for="AssembleType.Id" class="text-danger"></span>
                    </div>
                    <!-- Form Group (Type)-->
                    <div class="col-md-6">
                      <label asp-for="TechnicalLocation.Id" class="control-label">Technical Location</label>
                      @Html.DropDownListFor(m => m.TechnicalLocation.Id, technicalLocation, new { @class = "form-control" })
                      <span asp-validation-for="TechnicalLocation.Id" class="text-danger"></span>
                    </div>
                </div>

                <hr />

                <h4>Property</h4>
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <!-- Form Row-->
                <div class="row gx-3 mb-3">
                    <!-- Form Group (Code)-->
                    <div class="col-md-6">
                       <label asp-for="AssembleProperty.AssembleMaker" class="control-label">Maker</label>
                       <input asp-for="AssembleProperty.AssembleMaker" type = "text" class="form-control"/>
                       <span asp-validation-for="AssembleProperty.AssembleMaker" class="text-danger"></span>
                    </div>
                       <!-- Form Group (Code)-->
                    <div class="col-md-6">
                       <label asp-for="AssembleProperty.AssembleSerialNumber" class="control-label">Serial Number</label>
                       <input asp-for="AssembleProperty.AssembleSerialNumber" type = "text"class="form-control" />
                       <span asp-validation-for="AssembleProperty.AssembleSerialNumber" class="text-danger"></span>
                    </div>
                    <!-- Form Group (Code)-->
                    <div class="col-md-6">
                       <label asp-for="AssembleProperty.AssemblePurchaseDate" class="control-label">Pruchase Date</label>
                       <input type="date" asp-for="AssembleProperty.AssemblePurchaseDate" class="form-control" />
                       <span asp-validation-for="AssembleProperty.AssemblePurchaseDate" class="text-danger"></span>
                    </div>
                     <!-- Form Group (Code)-->
                    <div class="col-md-6">
                       <label asp-for="AssembleProperty.AssembleDayGuarantee" class="control-label">Day Guarantee</label>
                       <input type="number" asp-for="AssembleProperty.AssembleDayGuarantee" class="form-control" />
                       <span asp-validation-for="AssembleProperty.AssembleDayGuarantee" class="text-danger"></span>
                    </div>
                </div>
               
               <div class="form-group">
                   <input type="submit" value="Create Assemble" class="btn-group-lg btn-primary" />
               </div>

           </form>
       </div>
    </div>
</div>

    </body>


</html>

@section Scripts{ 
    @{<partial name="_ValidationScriptspartial"/> }
}



   