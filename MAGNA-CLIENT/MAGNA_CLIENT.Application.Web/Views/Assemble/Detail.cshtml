@model MAGNA_CLIENT.Entities.Assemble
@{
    ViewBag.Title = "Detail";
    ViewData["Title"] = "Detail Assemble";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
    Guid id = Guid.NewGuid();
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
     <!--breadcrumb-->
 <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href='/Home'>MAGNA</a></li>
    <li class="breadcrumb-item"><a href='/Assemble'>Assemble</a></li>
    <li class="breadcrumb-item active" aria-current="page">Detail</li>
  </ol>
</nav>
    <body>
        <div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h3>Create New Assemble</h3>
        </div>
    </div>

    <div class="row">
       <div class="col-sm-10">
           <form method="post" asp-action="Create">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <!-- Form Row-->
                <div class="row gx-3 mb-3">
                    <!-- Form Group (Code)-->
                    <div class="col-md-6">
                       <label asp-for="Id" class="control-label">Id</label>
                       <input asp-for="Id" type = "text" value = "@id" class="form-control" readonly/ >
                       <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <!-- Form Group (Code)-->
                    <div class="col-md-6">
                       <label asp-for="AssembleCode" class="control-label">Code</label>
                       <input asp-for="AssembleCode" class="form-control" />
                       <span asp-validation-for="AssembleCode" class="text-danger"></span>
                    </div>
                </div>
                  <!-- Form Row-->
                <div class="row gx-3 mb-3">
                    <!-- Form Group (Description)-->
                    <div class="col-md-6">
                       <label asp-for="AssembleDescription" class="control-label">Description</label>
                       <input asp-for="AssembleDescription" class="form-control" />
                       <span asp-validation-for="AssembleDescription" class="text-danger"></span>
                    </div>
                    <!-- Form Group (Type)-->
                    <div class="col-md-6">
                      <label asp-for="AssembleType.Id" class="control-label">Type</label>
                      @Html.DropDownListFor(m => m.AssembleType.Id, items, new { @class = "form-control" })
                      <span asp-validation-for="AssembleType.Id" class="text-danger"></span>
                    </div>
                </div>
               <div class="form-group">
                   <input type="submit" value="Create Assemble" class="btn-group-lg btn-primary" />
               </div>

           </form>
       </div>
    </div>
</div>

    </body>
</html>

