@model IEnumerable<MAGNA_CLIENT.Entities.Employee>

@{
    ViewData["Title"] = "Employee List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  
@if (TempData["mensaje_create"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <div>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg>
            @TempData["mensaje_create"]
        </div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["mensaje_update"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <div>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg>
            @TempData["mensaje_update"]
        </div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["mensaje_delete"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <div>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg>
            @TempData["mensaje_delete"]
        </div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container">
    <div class="row">
            <div class="col-sm-6">
                <h3>Employee List</h3>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-success d-block" asp-action="Create" asp-controller="Employee">Add New Employee</a>
            </div>
            <!--breadcrumb-->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href='/Home'>MAGNA</a></li>
                    <li class="breadcrumb-item"><a href='/Employee'>Employee</a></li>
                    <li class="breadcrumb-item active" aria-current="page">/ Index</li>
                </ol>
            </nav>
    </div>
</div>

<div class="container-xl px-4 mt-4">
   <div class="row">
        @if (Model.Count() > 0)
    {
        <table class="table" style="padding:50px">
            <thead class="table-primary">
                <tr>
                    @*<th scope="col">Id</th>*@
                    <th scope="col"><center>Code</center></th>
                    <th scope="col"><center>First Name<center></th>
                    <th scope="col"><center>Last Name<center></th>
                    <th scope="col"><center>Start Date<center></th>
                    <th scope="col"><center>Action<center></th>
                </tr>
            </thead>
            <tbody id="myTable"> 
                @foreach (var employee in Model)
                {
                    <tr>

                        <td><center>@employee.EmployeeCode<center></td>
                        <td><center>@employee.EmployeeFirstName<center></td>
                        <td><center>@employee.EmployeeLastName<center></td>
                        <td><center>@employee.EmployeeStartDate<center></td>
                        <td>
                            <div class="btn-group grid gap-2 d-md-flex justify-content-md-end" role="group"  aria-label="basic outlined example" style=text-align:center>
                                <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id" type="button" class="btn col-6 mx-auto btn-outline-warning">Update</a>
                                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" type="button" class="btn col-6 mx-auto btn-outline-danger">Delete</a>
                                <a asp-controller="Employee" asp-action="Detail" asp-route-id="@employee.Id" type="button" class="btn col-6 mx-auto btn-outline-primary">Detail</a>
                            </div>
                        </td>
                    </tr>

                } 
            </tbody>
        </table>
    }
    else
    {
        <p>There are no records</p>
    }
  </div>
</div>

  <script>
  //Autoclose
    window.setTimeout(function(){
        $(".alert").fadeTo(1500,0).slideDown(1000,function(){
            $(this).remove();
        });
    },2000); // 2 segundos y desaparece
  </script>
  <script>
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
  </script>

 