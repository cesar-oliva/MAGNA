@model MAGNA_CLIENT.Entities.Notice
@{
    ViewBag.Title = "Create";
    ViewData["Title"] = "Create New Notice";
    List<SelectListItem> priority = (List<SelectListItem>)ViewBag.Priority;
    List<SelectListItem> category = (List<SelectListItem>)ViewBag.Category;
    List<SelectListItem> state = (List<SelectListItem>)ViewBag.State;
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h3>Create New Notice</h3>
        </div>
    </div>
 </div>
 <!--breadcrumb-->
 <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href='/Home'>MAGNA</a></li>
    <li class="breadcrumb-item"><a href='/Notice'>Notice</a></li>
    <li class="breadcrumb-item active" aria-current="page">Create</li>
  </ol>
</nav>
<div class="container-xl px-4 mt-4">
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Notice Details</div>
                <div class="card-body">
                    <!--<form method="post" enctype= "multipart/form-data" asp-action="Create">-->
                    <form asp-action="Create" asp-controller="Notice" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label asp-for="NoticeCode" class="control-label">Code</label>
                            <input asp-for="NoticeCode" class="form-control" placeholder="Enter Code" />
                            <span asp-validation-for="NoticeCode" class="text-danger"></span>
                        </div>
                        <!-- Form Group (Notice date)-->
                            <div class="col-md-6">
                                <label asp-for="NoticeDate" class="control-label">Date</label>
                                <input type="date" asp-for="NoticeDate" class="form-control"placeholder="Enter date" />
                                <span asp-validation-for="NoticeDate" class="text-danger"></span>
                            </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (Notice Description)-->
                            <div class="col-md-6">
                                 <label asp-for="NoticeDescription" class="control-label">Description</label>
                                 <input asp-for="NoticeDescription" class="form-control"placeholder="Enter description" />
                                 <span asp-validation-for="NoticeDescription" class="text-danger"></span>
                            </div>
                              <!-- Form Group (Notice Priority)-->
                            <div class="col-md-6">
                                 <label asp-for="NoticePriority" class="control-label">Priority</label>
                                 @Html.DropDownListFor(m => m.NoticePriority.Id, priority, new { @class = "form-control" })
                                 <span asp-validation-for="NoticePriority" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (Notice Priority)-->
                            <div class="col-md-6">
                                 <label asp-for="NoticePriority" class="control-label">Priority</label>
                                 @Html.DropDownListFor(m => m.NoticePriority.Id, priority, new { @class = "form-control" })
                                 <span asp-validation-for="NoticePriority" class="text-danger"></span>
                            </div>
                    
                        <!-- Save changes button-->
                        <div class="col-md-1">
                            <div class="form-group">
                            <input type="submit" value="Create Employee" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    @{<partial name="_ValidationScriptspartial"/> }
}

 